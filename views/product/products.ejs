<%- include('../layouts/header') %>
<!-- our products  -->
<section id="products">
    <div class="container">
        <div class="heading text-center cat-product-heading">
            <h2><%= catTitle.toUpperCase();  %>S</h2>
          </div>
          <!-- displaying products -->
          <% products.forEach((product) => { %>
          <div class="row product-row">
            <% product.forEach((p) => { %>
            <div class="col-md-4">
              <div class="product">
                <img class="img-responsive" src="/productImages/<%= p.id %>/<%= p.image %>" alt="">
                <div class="product-details text-center">
                  <h4><%= p.title %></h4>
                  <p>$<%= p.price %></p>
                  <a href="/cart/add/<%= p.slug %>" class="btn btn-primary"><i class="fas fa-cart-plus"></i> Add to cart</a><br><br>
                  <a href="/products/product/<%= p.slug %>" class="btn btn-default">Details</a>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        <% }) %>
    </div>
</section>
<br><br><br>
<br><br><br>
<%- include('../layouts/footer') %>